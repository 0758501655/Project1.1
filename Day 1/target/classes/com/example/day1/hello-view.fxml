<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.day1.HelloController" prefWidth="500">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
  <Label text="HEALTH MANAGEMENT SYSTEM" GridPane.rowIndex="0" GridPane.columnIndex="4">
    <padding>
      <Insets bottom="20.0" top="20.0"/>
    </padding>
  </Label>

  <HBox spacing="20" GridPane.rowIndex="2" GridPane.columnIndex="4">
    <padding>
      <Insets bottom="20.0" right="50.0" top="20.0"/>
    </padding>
    <Label text="First Name"/>
    <TextField promptText="First Name" prefWidth="190" fx:id="fn"/>
  </HBox>

  <HBox spacing="20" GridPane.rowIndex="4" GridPane.columnIndex="4">
    <padding>
      <Insets bottom="20.0" right="50.0" top="20.0"/>
    </padding>
    <Label text="Second  Name"/>
    <TextField promptText="Second Name" prefWidth="170" fx:id="sn"/>
  </HBox>

  <HBox spacing="20" GridPane.rowIndex="6" GridPane.columnIndex="4">
    <padding>
      <Insets bottom="20.0" right="80.0" top="20.0"/>
    </padding>
    <Label text="Password"/>
    <PasswordField promptText="Password" prefWidth="200" fx:id="p"/>
  </HBox>

  <HBox spacing="20" GridPane.rowIndex="8" GridPane.columnIndex="4">
    <padding>
      <Insets bottom="20.0" right="50.0" top="20.0"/>
    </padding>
    <Label text="Confirm Password"/>
    <PasswordField promptText="Confirm password" prefWidth="150" fx:id="cp"/>
  </HBox>

  <HBox GridPane.columnIndex="4" GridPane.rowIndex="10" spacing="20">
    <padding>
      <Insets bottom="20.0" left="100.0" top="20.0"/>
    </padding>
    <Button text="Login" onAction="#LoginHandler"/>
    <Button text="Create Account" onAction="#CreateAccountHandler"/>

  </HBox>
</GridPane>
