<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.day1.LoginController"
          prefHeight="400.0" prefWidth="300.0" style="-fx-background:teal">

    <ImageView fx:id="logoImageView" fitWidth="600" fitHeight="200" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

    <HBox spacing="20" GridPane.rowIndex="2" GridPane.columnIndex="4">
        <padding>
            <Insets bottom="20.0" right="50.0" top="20.0" left="200"/>
        </padding>
        <Label text="First Name"/>
        <TextField promptText="First Name" prefWidth="190" fx:id="fn"/>
    </HBox>

    <HBox spacing="20" GridPane.rowIndex="4" GridPane.columnIndex="4">
        <padding>
            <Insets bottom="20.0" right="100.0" top="20.0" left="200"/>
        </padding>
        <Label text="Second  Name"/>
        <TextField promptText="Second Name" prefWidth="170" fx:id="sn"/>
    </HBox>
    <HBox spacing="20" GridPane.rowIndex="6" GridPane.columnIndex="4">
        <padding>
            <Insets bottom="20.0" right="70.0" top="20.0" left="200"/>
        </padding>
        <Label text="Password"/>
        <PasswordField promptText="Password" prefWidth="200" fx:id="p"/>
    </HBox>
    <HBox GridPane.columnIndex="4" GridPane.rowIndex="10" spacing="20">
        <padding>
            <Insets bottom="20.0" left="300.0" top="20.0"  />
        </padding>
        <Button text="Login" onAction="#LoginHandler"/>
        <Button text="Create Account" onAction="#CreateAccountHandler"/>

    </HBox>

</GridPane>
